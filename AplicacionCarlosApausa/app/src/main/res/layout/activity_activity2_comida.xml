<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity2Comida">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <ImageButton
                    android:id="@+id/imageButton"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:onClick="cambioPantallaMenus"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bmenu" />

                <ImageButton
                    android:id="@+id/imageButton2"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:onClick="cambioPantallaPrimeros"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bprimero" />

                <ImageButton
                    android:id="@+id/imageButton3"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:onClick="cambioPantallaSegundos"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bsegundo" />

                <ImageButton
                    android:id="@+id/imageButton4"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:onClick="cambioPantallaPostres"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bpostres" />

                <ImageButton
                    android:id="@+id/imageButton5"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_weight="1"
                    android:onClick="cambioPantallaBebidas"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/bbebidas" />

                <Button
                    android:id="@+id/button11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="cambioPantallaPrincipal"
                    android:text="@string/ATRAS" />

            </LinearLayout>
        </ScrollView>

    </LinearLayout>
</LinearLayout>